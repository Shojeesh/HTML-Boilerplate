
@import url('https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&family=Playfair+Display&display=swap')

@import 'base/_mixins.styl'
@import 'base/_variables.styl'
@import 'base/_normalize.styl'

@import 'components/main/_header.styl'
@import 'components/main/_footer.styl'


*
	box-sizing border-box
html
	font-size rootFontSize
#root
	display flex
	flex-direction column
	min-height 100vh
body
	margin 0
	padding 0
	font-family systemFont
	font-size baseFontSize
	line-height 1.4
	color #000
	overflow-x hidden
main
	width 100%
	font-size baseFontSize
	flex-grow 1
	background #fff
.container
	width 100%
	margin 0 auto
	padding 0 20px
	+mq(extralarge)
		max-width 1430px
a
	text-decoration none
fieldset
	border 0
	padding 0
label
	display block
	font-weight 700
	font-size 1.3rem
	margin-bottom 10px
	&.radioLabel
		margin-bottom 20px
.hidden, hidden
	display none!important
fieldset
	padding 0
	margin 20px 0
	border 0
	

@import 'base/_helpers.styl'