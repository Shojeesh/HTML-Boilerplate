
// Markup:
//  <select class="select"><option>Option 1</option></select>
//
// Styleguide Components.Select

@import '../../base/_mixins.styl'
@import '../../base/_variables.styl'

.select
	width 100%
	height 60px
	background #fff
	color #000
	font-size 1.4rem
	font-weight 300
	padding 0 25px
	border solid 1px #ddd
	appearance none
	background-image url('../images/down-arrow.png')
	background-repeat no-repeat
	background-position calc(100%  - 20px) 25px
	&:focus
		border solid 1px #ddd
		outline none